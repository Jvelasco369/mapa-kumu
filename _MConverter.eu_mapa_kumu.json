@controls {
  top {
    filter {
      target: element;
      by: group;
      as: buttons;
      multiple: true;
      default: show-all;
    }
  }
}

@settings {
  template: systems;
  cluster: group;
  layout: hierarchy;
}

@style {
  "Actores Clave" {
    color: #5B9BD5;
    size: 20;
  }
  "Procesos Centrales" {
    color: #70AD47;
    size: 25;
  }
  "Recursos Necesarios" {
    color: #F4B183;
    size: 18;
  }
  "Objetivos Estrat√©gicos" {
    color: #B084C7;
    size: 22;
  }
  "Otros" {
    color: #D9D9D9;
    size: 16;
  }
}

@connections {
  show-labels: true;
  color: #999;
  width: 1;
}

